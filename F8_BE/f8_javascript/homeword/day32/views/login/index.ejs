<!DOCTYPE html>
<html>
  <body>
    <div class="login-container">
      <h1>Đăng nhập</h1>
      <form method="post">
        <% if (error?.length) { %>
        <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="Email..."
            required
          />
        </div>
        <div class="form-group">
          <label for="password">Mật khẩu</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Mật khẩu..."
            required
          />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Đăng nhập</button>
        </div>
      </form>
    </div>
  </body>
</html>
